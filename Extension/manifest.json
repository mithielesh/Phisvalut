{
  "manifest_version": 3,
  "name": "PhishVault Side Panel",
  "version": "1.0",
  "description": "Scan URLs for phishing threats using AI",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_title": "Open PhishVault"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "*://127.0.0.1/*",
    "*://localhost/*"
  ]
}