{
  "manifest_version": 3,
  "name": "PhishVault Side Panel",
  "version": "1.0",
  "description": "Scan URLs for phishing threats using AI",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_title": "Open PhishVault"
  },
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "*://127.0.0.1/*",
    "*://localhost/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "analysis.html",
        "analysis.css",
        "analysis.js",
        "config.js",
        "ai-analysis.css",
        "chat-interface.css",
        "chat.js",
        "deep-scan.css",
        "deepScan.js",
        "floatingPanel.css",
        "floatingPanel.js",
        "settings.html",
        "settings.js",
        "images/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}